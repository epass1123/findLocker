<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/register.css">
    <title>맡겨줘 회원가입</title>
</head>
<body>
    <script>
        function chkSame(){
            var pw = document.getElementsByName("password")[0].value;
            var pwChk = document.getElementsByName("passwordChk")[0].value;
            var alertChk = document.getElementById("alertChk");
            if(pw!=='' && pwChk!==''){
                if(pw===pwChk){
                    alertChk.innerHTML="비밀번호가 일치합니다.";
                    alertChk.style.color = 'blue';
                }
                else{
                    alertChk.innerHTML="비밀번호가 일치하지 않습니다.";
                    alertChk.style.color = 'red';
                }
            }
        }
    </script>
    <div class="register">
        <h2>회원가입</h2>
            <form method="post" class="register-form" action="">
                    <b class="name">이름</b>
                    <input type="text" name="name" placeholder="이름" required>
                    <b class="id">UserID</b>
                    <input type="text" name="id" placeholder="아이디" required>
                    <b class="pw">PW</b>
                    <input type="password" name="password" placeholder="패스워드" onchange="chkSame()" required>
                    <div id="doubleChk">
                        <b class="pwChk">PW 확인</b>
                        <b id="alertChk"></b>
                    </div>
                    <input type="password" name="passwordChk" placeholder="패스워드확인" onchange="chkSame()" required>
                    <b class="email">email</b>
                    <input type="email" name="email" placeholder="E-mail">
                    <label for="email">
                        <input type="checkbox" id="email"> email 수신 동의
                    </label>
                    <input type="submit" value="Sign up">
            </form>
    </div>
</body>
</html>